{
    "manifest_version": 2,
    "name": "Smart Reading",
    "version": "1.0",
    "description": "Convert the text selected to the language and reading level chosen by the user",
    "permissions": ["activeTab", "storage", "scripting"],
    "icons": {
        "16": "images/reading_16.png",
        "48": "images/reading_48.png",
        "128": "images/reading_128.png"
    },
    "content_scripts": [
        {
          "matches": ["<all_urls>"],
          "js": ["popup.js"]
        }
    ],
    "web_accessible_resources": [
      "images/reading_16.png",
      "images/reading_48.png",
      "images/reading_128.png"
    ]
}  